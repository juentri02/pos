<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="290.0" prefWidth="354.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.java_todolist.controller.EditTaskController">
    <children>
        <!-- Form Input untuk Edit Task -->
        <Label layoutX="20" layoutY="20" text="Judul" />
        <TextField fx:id="titleField" layoutX="100" layoutY="20" prefHeight="25.0" prefWidth="229.0" />

        <Label layoutX="20" layoutY="60" text="Kategori" />
        <ComboBox fx:id="categoryComboBox" layoutX="100" layoutY="60" prefHeight="25.0" prefWidth="229.0"/>

        <Label layoutX="20" layoutY="100" text="Deskripsi" />
        <TextArea fx:id="descriptionField" layoutX="100.0" layoutY="99.0" prefHeight="51.0" prefWidth="229.0" />

        <Label layoutX="20.0" layoutY="156.0" text="Deadline" />
        <DatePicker fx:id="deadlinePicker" layoutX="100.0" layoutY="160.0" />

        <Label layoutX="22.0" layoutY="197.0" text="Status" />
        <CheckBox fx:id="isDoneCheckBox" layoutX="99.0" layoutY="197.0" text="Selesai" />

        <Button layoutX="100.0" layoutY="232.0" onAction="#handleSaveChanges" text="Simpan" />
        <Button layoutX="166.0" layoutY="232.0" onAction="#handleCancel" text="Batal" />
    </children>
</AnchorPane>
